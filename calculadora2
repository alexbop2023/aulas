def calculadora(num1,num2,operacao):
  if(operacao == 1):
    calculo = num1+num2
    return "O resultado é: ", calculo

  elif(operacao ==2 ):
    calculo = num1-num2
    return "O resultado é: ", calculo

  elif(operacao == 3 ):
    calculo = num1*num2
    return "O resultado é: ", calculo

  elif(operacao ==4 ):
    calculo = num1*num2
    return "O resultado é: ", calculo

  else:
    return 0

executar = False

while(executar == False):
  print("Iniciando Calculadora...")
  print("Seja bem vindo a nossa calculadora. \nMenu: \n1 - Soma: \n2 - Subtração: \n3 - Multiplicação: \n4 - Divisão: \n0 - Sair")
  operacao=int(input("Digite a operação: "))
  if(operacao<0 or operacao>4):
    print("Essa operação não existe")
  elif(operacao==0):
    print('Você saiu da Caculadora...')
    executar=True
    break
  num1=int(input("Digite um número: "))
  num2=int(input("Digite outro número: "))
  
  

  
  result=calculadora(num1,num2,operacao)
  print(result) 
